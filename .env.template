# ============================================================================
# BIZRA AEON OMEGA v10.0.0 - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and customize for your environment
# NEVER commit .env to version control (add to .gitignore)

# ──────────────────────────────────────────────────────────────────────────
# SYSTEM CONFIGURATION
# ──────────────────────────────────────────────────────────────────────────
SYSTEM_MODE=production              # production | staging | development
LOG_LEVEL=INFO                      # DEBUG | INFO | WARNING | ERROR
WORKERS=10                          # Number of Uvicorn workers
HOST=0.0.0.0                        # Bind address
PORT=8000                           # HTTP port

# ──────────────────────────────────────────────────────────────────────────
# NEO4J DATABASE (L4 Semantic HyperGraph)
# ──────────────────────────────────────────────────────────────────────────
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password-here
NEO4J_DATABASE=bizra
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30

# ──────────────────────────────────────────────────────────────────────────
# REDIS CACHE (Temporal Chain Acceleration)
# ──────────────────────────────────────────────────────────────────────────
REDIS_URI=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password-here
REDIS_MAX_CONNECTIONS=50

# ──────────────────────────────────────────────────────────────────────────
# PROMETHEUS MONITORING
# ──────────────────────────────────────────────────────────────────────────
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_PATH=/metrics

# ──────────────────────────────────────────────────────────────────────────
# COGNITIVE PARAMETERS (Performance Tuning)
# ──────────────────────────────────────────────────────────────────────────
# L1 Perception
MEMORY_BUFFER_SIZE=7                # Miller's Law: 7±2 chunks
L1_CAPACITY=9                       # Max perceptual buffer capacity

# L2 Consolidation
COMPRESSION_RATIO_TARGET=0.45       # LZMA compression target
L2_DECAY_RATE=0.95                  # Priority decay rate

# L3 Episodic
FAISS_INDEX_TYPE=Flat               # Flat | IVF | HNSW
FAISS_METRIC=L2                     # L2 | InnerProduct | Cosine
EMBEDDING_DIM=768                   # Vector dimensionality

# L4 Semantic
HYPERGRAPH_MAX_NODES=10000          # Max nodes before pruning
RICH_CLUB_K=5                       # Rich-club threshold

# L5 Execution
CRYSTALLIZATION_THRESHOLD=0.95      # Min confidence for tool crystallization
TOOL_TIMEOUT_MS=30000               # Max tool execution time

# ──────────────────────────────────────────────────────────────────────────
# SECURITY CONFIGURATION
# ──────────────────────────────────────────────────────────────────────────
# Quantum Security
QUANTUM_SECURITY_ENABLED=true
DILITHIUM_VARIANT=Dilithium5        # Dilithium5 (NIST Level 5)
KYBER_VARIANT=Kyber1024             # Kyber1024 (NIST Level 5)
KEY_STORAGE_PATH=/secure/keys       # Path for persistent keys

# Byzantine Consensus
BYZANTINE_VALIDATORS=5              # Total validator count
VALIDATION_QUORUM=3                 # 2/3+ required (calculated: ceil(5*2/3))

# Temporal Chain
TEMPORAL_HASH_ALGO=sha3_512         # SHA3-512 for quantum resistance
CHAIN_ENTROPY_THRESHOLD=4.0         # Min entropy per operation

# ──────────────────────────────────────────────────────────────────────────
# IHSĀN ETHICAL FRAMEWORK
# ──────────────────────────────────────────────────────────────────────────
IHSAN_THRESHOLD=0.95                # Minimum passing score
IHSAN_ENFORCEMENT=strict            # strict | warning | disabled

# Dimension Weights (must sum to 1.0)
WEIGHT_IKHLAS=0.30                  # Truthfulness
WEIGHT_KARAMA=0.20                  # Dignity  
WEIGHT_ADL=0.20                     # Fairness
WEIGHT_KAMAL=0.20                   # Excellence
WEIGHT_ISTIDAMA=0.10                # Sustainability

# ──────────────────────────────────────────────────────────────────────────
# PERFORMANCE TARGETS
# ──────────────────────────────────────────────────────────────────────────
TARGET_THROUGHPUT=238               # Cycles per second
TARGET_P99_LATENCY_MS=20            # P99 latency in milliseconds
TARGET_SNR=1.95                     # Signal-to-noise ratio
TARGET_UPTIME=0.9995                # 99.95% uptime

# ──────────────────────────────────────────────────────────────────────────
# KUBERNETES INTEGRATION (for production deployment)
# ──────────────────────────────────────────────────────────────────────────
K8S_NAMESPACE=bizra-prod
K8S_SERVICE_NAME=bizra-cognitive-engine
K8S_REPLICAS_MIN=5
K8S_REPLICAS_MAX=20
K8S_CPU_TARGET=70                   # Autoscaling CPU threshold (%)
K8S_MEMORY_TARGET=75                # Autoscaling memory threshold (%)

# ──────────────────────────────────────────────────────────────────────────
# OBSERVABILITY & TRACING
# ──────────────────────────────────────────────────────────────────────────
TRACING_ENABLED=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
TRACE_SAMPLE_RATE=0.1               # 10% sampling

# ──────────────────────────────────────────────────────────────────────────
# DEVELOPMENT SETTINGS (disable in production)
# ──────────────────────────────────────────────────────────────────────────
DEBUG_MODE=false
AUTO_RELOAD=false
ENABLE_DOCS=false                   # Disable /docs and /redoc in prod
ENABLE_PROFILER=false
